<div class="container"><h1>List of all our available movies</h1>
</div>
<% @movies.each do |movie|%>

  <div class="container">
    <div>
      <img src="<%= movie.poster_url%>" alt="<%= movie.title %>" height= "300" width= "300">
    </div>
    <div>
      <a href='movies#show'> <h3><%= "#{movie.title}"%></h3></a>
      <p> <%= movie.overview %> </p>
      <h4> <%= movie.rating %> </h4>
    </div>

  </div>

<%end%>
